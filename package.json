{
  "name": "lampampita",
  "private": true,
  "homepage": "https://cerinia.github.io/lapampita/",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "build": "vite build",
    "build-snap": "vite build && react-snap",
    "postbuild": "react-snap",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "bootstrap": "^5.3.8",
    "gh-pages": "^6.3.0",
    "react": "^19.1.1",
    "react-bootstrap": "^2.10.10",
    "react-dom": "^19.1.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.8.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "react-snap": "^1.23.0",
    "vite": "^7.1.2"
  },
  "reactSnap": {
    "include": [
      "/",
      "/about",
      "/contact",
      "/courses",
      "/courses/horticultura-biointensiva",
      "/courses/permacultura-urbana",
      "/courses/agricultura-regenerativa"
    ],
    "skipThirdPartyRequests": true,
    "cacheAjaxRequests": false,
    "puppeteerArgs": [
      "--no-sandbox",
      "--disable-setuid-sandbox"
    ],
    "source": "dist",
    "destination": "dist"
  }
}
